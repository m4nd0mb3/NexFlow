{
  "name": "nexflow",
  "version": "1.0.0",
  "description": "Bem-vindo ao repositório oficial do NexFlow API Gateway – uma solução moderna e escalável para gerenciamento eficiente de APIs. O NexFlow atua como um hub central, conectando e facilitando a comunicação entre diferentes serviços e aplicativos. Esta plataforma oferece recursos avançados, incluindo roteamento inteligente, controle de acesso, transformação de dados e métricas detalhadas para otimizar o ciclo de vida das APIs.",
  "main": "app.js",
  "scripts": {
    "start": "node dist/app.js",
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/app.ts",
    "dev-test": "nodemon src/protected-service.js",
    "dev-websocket": "nodemon src/websocket.js",
    "dev-sse": "nodemon src/sse.js",
    "dev-polling": "nodemon src/polling.js",
    "build-dist": "./node_modules/typescript/bin/tsc",
    "mocha": "mocha --recursive --reporter spec -r test/bootstrap.js",
    "test": "npm run mocha -- test/ -r test/integration/bootstrap.js"
  },
  "author": "Jonathan Mandombe",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "bcrypt-ts": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "http-proxy-middleware": "^2.0.6",
    "inversify": "^6.0.2",
    "inversify-express-utils": "^6.4.6",
    "jsonwebtoken": "^9.0.2",
    "keycloak-connect": "^23.0.3",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "socket.io": "^4.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@babel/plugin-transform-typescript": "^7.23.6",
    "@babel/preset-typescript": "^7.23.3",
    "@types/express": "^4.17.21",
    "@types/express-validator": "^3.0.0",
    "@types/inversify-express-utils": "^2.0.0",
    "@types/reflect-metadata": "^0.1.0",
    "@types/uuid": "^9.0.8",
    "nodemon": "^3.0.2",
    "ts-node": "^10.2.1"
  }
}
